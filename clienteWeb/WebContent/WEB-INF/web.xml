<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ClienteWeb</display-name>
  
  <servlet>
    <description>Producto</description>
    <display-name>Producto</display-name>
    <servlet-name>Producto</servlet-name>
    <servlet-class>org.clienteWeb.servlets.ProductoServlet</servlet-class>
  </servlet>
  
  <servlet>
    <description>Plato</description>
    <display-name>Plato</display-name>
    <servlet-name>Plato</servlet-name>
    <servlet-class>org.clienteWeb.servlets.PlatoServlet</servlet-class>
  </servlet>
  
   <servlet>
    <description>login</description>
    <display-name>login</display-name>
    <servlet-name>login</servlet-name>
    <servlet-class>org.clienteWeb.servlets.LoginServlet</servlet-class>
  </servlet>
  
  <servlet>
    <description>Mozo</description>
    <display-name>Mozo</display-name>
    <servlet-name>Mozo</servlet-name>
    <servlet-class>org.clienteWeb.servlets.MozoServlet</servlet-class>
  </servlet>
  
  <servlet>
    <description>Comandas</description>
    <display-name>Comandas</display-name>
    <servlet-name>Comandas</servlet-name>
    <servlet-class>org.clienteWeb.servlets.ComandaServlet</servlet-class>
  </servlet>
  
  <servlet>
    <description>NuevoPlato</description>
    <display-name>NuevoPlato</display-name>
    <servlet-name>NuevoPlato</servlet-name>
    <servlet-class>org.clienteWeb.servlets.PlatoServlet</servlet-class>
  </servlet>
 
   <servlet>
    <description>AreaProduccion</description>
    <display-name>AreaProduccion</display-name>
    <servlet-name>AreaProduccion</servlet-name>
    <servlet-class>org.clienteWeb.servlets.AreaProduccionServlet</servlet-class>
  </servlet>
  
  <servlet>
    <description>CerrarSesion</description>
    <display-name>CerrarSesion</display-name>
    <servlet-name>CerrarSesion</servlet-name>
    <servlet-class>org.clienteWeb.servlets.CerrarSesionServlet</servlet-class>
  </servlet>
  
   <servlet-mapping>
    <servlet-name>CerrarSesion</servlet-name>
    <url-pattern>/cerrar</url-pattern>
  </servlet-mapping> 
  
  
   <servlet-mapping>
    <servlet-name>AreaProduccion</servlet-name>
    <url-pattern>/areaproduccion</url-pattern>
  </servlet-mapping> 
  
  
   <servlet-mapping>
    <servlet-name>NuevoPlato</servlet-name>
    <url-pattern>/nuevoplato</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Plato</servlet-name>
    <url-pattern>/plato</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Producto</servlet-name>
    <url-pattern>/producto</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Mozo</servlet-name>
    <url-pattern>/mozo</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Comandas</servlet-name>
    <url-pattern>/comandas</url-pattern>
  </servlet-mapping>
  
  <context-param>
    <param-name>PLANTILLAS_DIR</param-name>
    <param-value>/etc/nanocomm/AppMesh/plantillas/</param-value>
  </context-param>
  
</web-app>